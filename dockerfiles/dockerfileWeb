FROM centos:latest
RUN yum -y update && \
yum -y install netcat ssh iputils-ping epel-release python-pip && \
yum clean all
mkdir /var/run/sshd && \
chmod 0755 /var/run/sshd && \
useradd -p $(openssl passwd -1 u2password) --create-home --shell /bin/bash --groups sudo u2

EXPOSE 22

CMD ["/usr/sbin/sshd", “-D”]
ENTRYPOINT /bin/bash